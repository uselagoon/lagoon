{
  "trigger": {
    "schedule": {
      "interval": "30s"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "service-logs-*"
        ],
        "types": [],
        "body": {
          "query": {
            "bool": {
              "filter": {
                "range": {
                  "@timestamp": {
                    "gte": "now-1m"
                  }
                }
              },
              "must": [
                {
                  "match": {
                    "action": "disconnected"
                  }
                }
              ],
              "should": [
                {
                  "regexp": {
                    "message": "EHOSTUNREACH"
                  }
                }
              ]
            }
          },
          "aggs": {
            "group_by_service": {
              "terms": {
                "field": "label.keyword",
                "size": 25
              }
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 2
      }
    }
  },
  "actions": {
    "notify-slack": {
      "throttle_period": "5m",
      "slack": {
        "account": "monitoring",
        "message": {
          "from": "lagoon-xpack",
          "to": [
            "#lagoon-dev-alerts"
          ],
          "text": "Connection errors from {{#ctx.payload.aggregations.group_by_service.buckets}}{{key}} {{/ctx.payload.aggregations.group_by_service.buckets}}"
        }
      }
    }
  }
}
