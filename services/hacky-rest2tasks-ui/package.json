{
  "private": true,
  "entry": {
    "client": "entry/client",
    "server": "entry/server"
  },
  "template": "index.ejs",
  "scripts": {
    "build": "react-scripts build",
    "dev": "react-scripts dev",
    "lint": "react-scripts lint",
    "lint:fix": "react-scripts lint --fix",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "flow": "flow",
    "format": "prettier --trailing-comma all --single-quote --write 'app/**/*.js' && yarn run lint -- --fix",
    "persist": "node bin/update-persistgraphql",
    "persist:upload": "node bin/update-persistgraphql decoupled.backend.docker.amazee.io --upload",
    "introspect": "node bin/update-introspection",
    "precommit": "lint-staged",
    "test:watch": "yarn run test -- --watch"
  },
  "lint-staged": {
    "linters": {
      "frontend/app/**/*.js": [
        "prettier --trailing-comma all --single-quote --write",
        "lint:fix",
        "git add"
      ]
    },
    "gitDir": "../"
  },
  "dependencies": {
    "@amazee/persistgraphql": "^0.3.2",
    "@amazee/react-scripts": "0.0.63",
    "apollo-client": "^1.2.2",
    "compression": "^1.6.2",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "fetch-everywhere": "^1.0.5",
    "graphql-anywhere": "^3.0.1",
    "graphql-tag": "^2.1.0",
    "history": "^4.0.0",
    "offline-plugin": "^4.8.1",
    "ramda": "^0.23.0",
    "react": "^15.3.0",
    "react-apollo": "^1.2.0",
    "react-async-bootstrapper": "^1.1.1",
    "react-async-component": "^1.0.0-beta.3",
    "react-dom": "^15.3.0",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "^3.0.0-beta",
    "react-redux": "^5.0.5",
    "react-router": "^3",
    "react-router-redux": "^4.0.8",
    "recompose": "^0.23.4",
    "redux": "^3.6.0",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.3.0",
    "styled-components": "2.0.0-19",
    "styled-normalize": "^1.0.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "flow-bin": "^0.46.0",
    "jssha": "^2.3.0",
    "lint-staged": "^3.4.2",
    "prettier": "^1.3.1",
    "sync-request": "^4.0.3"
  }
}
