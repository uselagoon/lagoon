{
  "private": true,
  "scripts": {
    "clean": "rimraf dist && rimraf logs",
    "build": "babel src -d dist",
    "dev": "nodemon --watch src --exec 'node -r babel-core/register' -- src",
    "start": "node dist",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow check",
    "format": "prettier --trailing-comma all --single-quote --write 'src/**/*.js' && yarn run lint -- --fix"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.1",
    "morgan": "^1.8.2",
    "nano": "^6.3.0",
    "sshpk": "^1.13.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.0.0",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "flow-bin": "^0.48.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma all --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "flow"
  ]
}
